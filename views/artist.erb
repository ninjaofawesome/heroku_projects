<div class="container">

<div class="row">
	    <div class="col-xs-12 col-s-12 col-md-12">  
			<h1 class = "extra_large">Here's the information about your Artists</h1>
			<center>
			<h2>So much information.</h2>
		</center>
		</div>

	<div class="clearfix visible-xs"></div>
	<div class="clearfix visible-s"></div>

</div><!-- this is the end of the row  -->


<div class="row">
	    <div class="col-xs-4 col-xs-offset-4 col-s-4 col-s-offset-4col-md-4 col-md-offset-4"> 
	    	<h3 class ="gray bump">How many Artists are in this playlist?</h3>
				<ul>
					<li class = "text"><b><%= "there are #{@band_count} bands in this playlist." %></b></li>	
				</ul>
				
			<div class="clearfix visible-xs"></div>
			<div class="clearfix visible-s"></div>

	</div>
</div><!-- this is the end of the row  -->

<div class="row">

<div class="col-xs-4 col-s-4 col-md-4">
		<div class = "overflow">
			<h3 class = "gray">Which Artists belong to which Song?</h3>
				<% @big_list.each do |item| %>
					<ul class>
						<li class = "text"><b><%= item %></b></li>	
					</ul>
				<% end %>
			</div>
		</div>


	<div class="col-xs-4 col-s-4 col-md-4">
		<div class = "overflow">
			<h3 class ="gray">Who are the Artists in this playlist?</h3>
				<% @artist_output.each do |item| %>
					<ul>
						<li class = "text"><b><%= item %></b></li>	
					</ul>
				<% end %>	
			</div>
		</div>	

	<div class="col-xs-4 col-s-4 col-md-4">
		<div class = "overflow">
			<h3 class ="gray">How many Songs per artist?</h3>
				<% @artist_count.each do |key,value| %>
					<ul>
						<li class = "text"><b><%= "#{key}: #{value}" %></b></li>
					</ul>
				<% end %>
			</div>
		</div>

		<div class="clearfix visible-xs"></div>
	<div class="clearfix visible-s"></div> 

</div><!-- this is the end of the row  -->

</div> <!-- this is the end of the container  -->







 